@page
<head>
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Pages/Shared/_Layout.cshtml";
}



<style>
    html{
        height: 100%;
        width: 100%;
    }
    .container-form{
        
        margin: 0;
        width: 100%;
        height: 100vh;
        margin-top: 50px;
        padding-top: 50px;
        
       
    }
    .footer{
        position: fixed;
    }
    .card{
        
        margin-top: 0;
        background: #14213D;
        padding: 20px 10px;
    }
    h2{
        color: #fff;
        font-weight: bold;
        font-size: 30px;
        margin-top: 20px;
    }
    .row{
        background-color: #fff;
        width: calc(90% -10px);
        height: 100%;
        color: #000;
        margin: auto;
        width: 50%;
        
    }

        #registerForm{
            background-color: #14213D;
            margin-top: 0px;
            width: 400px;
            height: 550px;
            border-radius: 10px;
            margin: auto;
            text-align: center;
            padding: 0px 20px;
            
        }

        .form-control{
            color: #000;
        }
        .inner-form{
            margin-bottom: 10px;
            height: 400px;
            
        }

        @@media(max-width: 500px){
            .row{
                background-color: palevioletred;
                height: 100vh;
                width: 100%;
                top: 0;
                overflow: hidden;
                margin-top: -50px;
            }
            #registerForm{
                width: 100%;
                margin-top: 25px;
            }

            inner-form{
                height: 350px;

            }
        }
</style>
</head>
<div class="container-form">
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="card">Sign Up</h2>
            <hr />
            <div class="inner-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating m-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Please enter an email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating m-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Please enter a Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating m-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Please confirm password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit m-3" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </div>
        </form>
    </div>
    
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}